    "inputs": [
        {
            "id": "pick-ew-path",
            "description": "Pick (or type) a valid path to the Embedded Workbench for Arm",
            "default": "C:/iar/ewarm",
            "type":"pickString",
            "options": [
                "C:/iar/ewarm-9.70.1"            ]
        },
        {
            "id": "pick-bcx-path",
            "description": "Pick (or type) a valid path to the IAR Build Tools for Arm",
            "default": "/opt/iar/cxarm",
            "type":"pickString",
            "options": [
                "/opt/iar/cxarm",
                "/opt/iar/cxarm-9.70.1"            ]
        }
    ]
