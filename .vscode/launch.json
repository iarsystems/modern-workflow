        {
            "name": "IAR Debug (Linux/J-Link)",
            "type": "cspy",
            "request": "launch",
            "target": "arm",
            "program": "${command:cmake.launchTargetPath}",
            "stopOnSymbol": "main",
            "projectPath": "${workspaceRoot}",
