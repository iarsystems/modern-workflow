{
    "version": 10,
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS":true
            },
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build"
        },
        {
            "name": "cxarm",
            "displayName": "Configure for CXARM",
            "description": "Build with CXARM",
            "inherits": "common",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "environment": {
                "CC":  "/opt/iar/cxarm/arm/bin/iccarm",
                "CXX": "/opt/iar/cxarm/arm/bin/iccarm",
                "ASM": "/opt/iar/cxarm/arm/bin/iasmarm"
            },
            "cacheVariables": {
                "SELECTED_TOOL": "cxarm",
                "TOOLKIT_DIR": "/opt/iar/cxarm/arm"
            }
        },
        {
            "name": "bxarm",
            "displayName": "Configure for BXARM",
            "description": "Build with BXARM",
            "inherits": "common",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "environment": {
                "CC":  "/opt/iarsystems/bxarm/arm/bin/iccarm",
                "CXX": "/opt/iarsystems/bxarm/arm/bin/iccarm",
                "ASM": "/opt/iarsystems/bxarm/arm/bin/iasmarm"
            },
            "cacheVariables": {
                "SELECTED_TOOL": "bxarm",
                "TOOLKIT_DIR": "/opt/iarsystems/bxarm/arm"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Build Debug",
            "description": "Disable optimizations - include debug information.",
            "configurePreset": "cxarm",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "displayName": "Build Release",
            "description": "Optimize for speed - exclude debug information.",
            "configurePreset": "cxarm",
            "configuration": "Release"
        },
        {
            "name": "relwithdebinfo",
            "displayName": "Build RelWithDebInfo",
            "description": "Optimize for speed - include debug information.",
            "configurePreset": "cxarm",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "minsizerel",
            "displayName": "Build MinSizeRel",
            "description": "Optimize for smallest binary size - exclude debug information.",
            "configurePreset": "cxarm",
            "configuration": "MinSizeRel"
        }
    ],
    "testPresets": [
        {  
            "name": "test-common",
            "hidden": true,
            "configurePreset": "cxarm",
            "output": {"outputOnFailure": true},
            "execution": {"noTestsAction": "error", "stopOnFailure": true}
        },
        {
            "name": "debug",
            "displayName": "Test with CXARM",
            "description": "Test the build using CXARM",
            "inherits": "test-common",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "displayName": "Test with CXARM",
            "description": "Test the build using CXARM",
            "inherits": "test-common",
            "configuration": "Release"
        },
        {
            "name": "relwithdebinfo",
            "displayName": "Test with CXARM",
            "description": "Test the build using CXARM",
            "inherits": "test-common",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "minsizerel",
            "displayName": "Test with CXARM",
            "description": "Test the build using CXARM",
            "inherits": "test-common",
            "configuration": "MinSizeRel"
        }
    ]
}
